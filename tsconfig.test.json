{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist/test",
        "baseUrl": "./",
        "paths": {
            "@dist/*": ["dist/*"]
        },
        "skipLibCheck": true,
        "declaration": false,
        "declarationMap": false,
        "noEmit": true
    },
    "include": ["test/**/*.ts"],
    "exclude": ["src/**/*.ts", "types/**/*.ts"]
}
